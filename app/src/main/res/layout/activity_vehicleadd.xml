<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="za.co.jereda.zmis.VehicleaddActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_style"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:padding="2dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/etName"
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="text"
                android:hint="Enter Full Name"
                android:textStyle="italic"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/edittext_style"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Phone"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/etContactnum"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:ems="10"
                android:hint="Enter Phone Number"
                android:inputType="number"
                android:textStyle="italic"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/edittext_style"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="E-mail Address"
                android:textStyle="bold"
                android:paddingRight="30dp"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/etEmail"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Enter Email Address"
                android:textStyle="italic"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/edittext_style"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Manufacture"
                android:textStyle="bold"
                android:paddingRight="30dp"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/etManu"
                android:layout_height="30dp"
                android:layout_width="180dp"
                android:ems="10"
                android:hint="Enter Vehicle Manufacture"
                android:inputType="text"
                android:textStyle="italic"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/edittext_style"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Type"
                android:textStyle="bold"
                android:paddingRight="30dp"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/etType"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:ems="10"
                android:hint="Enter Vehicle Type"
                android:inputType="text"
                android:textStyle="italic"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/edittext_style"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Year"
                android:textStyle="bold"
                android:paddingRight="30dp"
                android:textSize="15dp"

                />
            <EditText
                android:id="@+id/etYear"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:ems="10"
                android:hint="Enter Vehicle Manufacture Year"
                android:inputType="number"
                android:textStyle="italic"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/edittext_style"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Colour"
                android:textStyle="bold"
                android:paddingRight="30dp"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/etColour"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:ems="10"
                android:hint="Enter Vehicle Colour"
                android:inputType="text"
                android:textStyle="italic"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/edittext_style"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Mileage"
                android:textStyle="bold"
                android:paddingRight="30dp"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/etMileage"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Enter Vehicle Mileage"
                android:textStyle="italic"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/edittext_style"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
           >

            <Button
                android:id="@+id/etSave"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="Save"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="@drawable/button_green"
                android:textColor="#CBE08F"
                />
            <Button
                android:id="@+id/etCancel"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="@string/cancel"

                android:layout_gravity="center"
                android:textSize="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/button_green"
                android:textColor="#CBE08F"
                />

        </TableRow>
    </TableLayout>
    </ScrollView>
</RelativeLayout>
